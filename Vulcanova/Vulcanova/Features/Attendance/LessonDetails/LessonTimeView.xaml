<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:Vulcanova.Resources;assembly=Vulcanova"
             x:Class="Vulcanova.Features.Attendance.LessonDetails.LessonTimeView"
             x:Name="View">
    <ContentView.Content>
        <StackLayout BindingContext="{x:Reference View}">
            <Label Text="{x:Static resx:Strings.LessonTimeLabel}" FontAttributes="Bold" />
            <Label x:Name="ValueLabel" />
        </StackLayout>
    </ContentView.Content>
</ContentView>