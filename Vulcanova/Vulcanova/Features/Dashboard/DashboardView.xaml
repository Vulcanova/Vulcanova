                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    LineBreakMode="TailTruncation"
                                    Text="5. Chemia (21)"
                                    VerticalOptions="End" />
                                <Label
                                    Grid.Column="1"
                                    HorizontalOptions="End"
                                    LineBreakMode="TailTruncation"
                                    Text="11:30 - 12:15" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    LineBreakMode="TailTruncation"
                                    Text="6. Angielski (34)"
                                    VerticalOptions="End" />
                                <Label
                                    Grid.Column="1"
                                    HorizontalOptions="End"
                                    LineBreakMode="TailTruncation"
                                    Text="12:35 - 13:20" />
                            </Grid>
                        </StackLayout>
                    </StackLayout>
                </Frame>
                <Frame
                    BackgroundColor="{AppThemeBinding Dark={StaticResource DarkControlColor},
                                                      Light=#FFF}"
                    CornerRadius="5"
                    HasShadow="False"
                    Margin="15,5"
                    Padding="15">
                    <StackLayout BackgroundColor="{AppThemeBinding Dark={StaticResource DarkControlColor}, Light=#FFF}">
                        <Label
                            FontSize="Medium"
                            LineBreakMode="TailTruncation"
                            Text="Nowe Oceny" />
                        <!--  Separator  -->
                        <BoxView Style="{StaticResource SeparatorStyle}" />
                        <StackLayout BackgroundColor="{AppThemeBinding Dark={StaticResource DarkControlColor}, Light=#FFF}">
                            <Label
                                LineBreakMode="TailTruncation"
                                Text="Matematyka - 6 - Sprawdzian"
                                TextColor="{AppThemeBinding Dark=#ff4242,
                                                            Light=#ff2929}"
