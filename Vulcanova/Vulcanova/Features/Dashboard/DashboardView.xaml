                                    Text="8:55 - 9:35" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    LineBreakMode="TailTruncation"
                                    Text="3. Język Polski (25)"
                                    VerticalOptions="End" />
                                <Label
                                    Grid.Column="1"
                                    HorizontalOptions="End"
                                    LineBreakMode="TailTruncation"
                                    Text="9:40 - 10:25" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    LineBreakMode="TailTruncation"
                                    Text="4. Biologia (15)"
