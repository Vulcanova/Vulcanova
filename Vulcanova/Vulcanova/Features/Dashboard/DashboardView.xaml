                        <BoxView Style="{StaticResource SeparatorStyle}" />
                        <StackLayout BackgroundColor="{AppThemeBinding Dark={StaticResource DarkControlColor}, Light=#FFF}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    LineBreakMode="TailTruncation"
                                    Text="1. Matematyka (31)"
                                    TextColor="{AppThemeBinding Dark={StaticResource DarkPrimaryColor},
                                                                Light={StaticResource LightPrimaryColor}}"
