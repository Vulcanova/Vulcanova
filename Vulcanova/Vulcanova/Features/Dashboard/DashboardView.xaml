                                FontSize="Title"
                                Grid.Column="1"
                                HorizontalOptions="End"
                                LineBreakMode="TailTruncation"
                                Text="23"
                                TextColor="{AppThemeBinding Dark={StaticResource DarkPrimaryColor},
                                                            Light={StaticResource LightPrimaryColor}}"
                                VerticalOptions="Center" />
                        </Grid>
                    </StackLayout>
                </Frame>
                <Frame
                    BackgroundColor="{AppThemeBinding Dark={StaticResource DarkControlColor},
                                                      Light=#FFF}"
                    CornerRadius="5"
                    HasShadow="False"
                    Margin="15,5"
                    Padding="15">
                    <StackLayout BackgroundColor="{AppThemeBinding Dark={StaticResource DarkControlColor}, Light=#FFF}">
                        <Label
                            FontSize="Medium"
                            LineBreakMode="TailTruncation"
                            Text="Sprawdziany" />
                        <!--  Separator  -->
                        <BoxView Style="{StaticResource SeparatorStyle}" />

                        <StackLayout BackgroundColor="{AppThemeBinding Dark={StaticResource DarkControlColor}, Light=#FFF}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label
                                    LineBreakMode="TailTruncation"
                                    Text="Matematyka - Sprawdzian"
                                    TextColor="{AppThemeBinding Dark=#ff4242,
                                                                Light=#ff2929}" />
                                <Label
                                    Grid.Column="1"
                                    HorizontalOptions="End"
                                    LineBreakMode="TailTruncation"
                                    Text="23.04" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label
                                    LineBreakMode="TailTruncation"
                                    Text="Język Angielski - Kartkówka"
                                    TextColor="{AppThemeBinding Dark=#fff242,
                                                                Light=#ff9442}" />
